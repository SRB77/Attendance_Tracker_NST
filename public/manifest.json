{
  "manifest_version": 3,
  "name": "Newton Attendance Analytics",
  "version": "1.0",
  "description": "A Simple Newton Attendance Analytics Application",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "newtonSchool_16.png",
      "48": "newtonSchool_48.png",
      "128": "newtonSchool_128.png"
    }
  },
  "icons": {
    "16": "newtonSchool_16.png",
    "48": "newtonSchool_48.png",
    "128": "newtonSchool_128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "cookies", "tabs"],
  "host_permissions": ["*://*.newtonschool.co/*"]
}
